<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/messagetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="انتظر جارى الحصول على النتائج...."
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/spin_kit"
        tools:ignore="HardcodedText" />

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorPrimaryDark"

        />



    <TextView
        android:id="@+id/greenview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="التزم بيتك"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="visible"
        android:background="@drawable/roundedbuttondrawagreen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/yellowview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="استشر طبيب"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/roundedbuttondrawableyellow"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        />


    <TextView
        android:id="@+id/redview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="اتصال بطوارئ 105"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/roundedbuttondrawablered"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        tools:ignore="HardcodedText" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قم باعادة الاختبار"
            android:background="@drawable/roundedbuttonred"
            android:textColor="@color/black"
            android:padding="18dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="visible"
            android:layout_above="@id/helpview"
            />

        <TextView
            android:id="@+id/helpview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="برنامج تطوعى استرشادى من شباب مصر وليس لة علاقة بوزارة الصحة او اى جهة حكومية"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:visibility="visible"
            android:background="@drawable/roundedbuttondrawablewhiteborder"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="15dp"
            tools:ignore="HardcodedText"
            />


    </LinearLayout>




</RelativeLayout>