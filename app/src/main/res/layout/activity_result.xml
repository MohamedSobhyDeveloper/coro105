<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/greenview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="التزم بيتك"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="visible"
        android:background="@drawable/roundedbuttondrawagreen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/yellowview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="استشر طبيب"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/roundedbuttondrawableyellow"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        />


    <TextView
        android:id="@+id/redview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="اتصال بطوارئ 105"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@drawable/roundedbuttondrawablered"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerInParent="true"

        tools:ignore="HardcodedText" />


</RelativeLayout>